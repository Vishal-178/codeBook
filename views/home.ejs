
<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user) { %>
    <form action="/posts/create" method="POST" new-post-form>
        <textarea name="post" cols="30" rows="3" placeholder="Type Here..."></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>
    <div id="posts-list-container">
        <ul>
            <% for( post of posts ) { %>
                <li id="main-id">
                    <p>
                        <% if (locals.user && (locals.user.id == post.user.id)) { %>
                            <small>
                                <a href="/posts/destroy/<%= post.id %>">fffx</a>
                            </small>
                        <% } %>
                        <%= post.content %>
                        <br>
                        <small><%= post.user.name %></small>
                    </p>
                    <div class="post-comment">
                        <%# adding form for comment on each post. %> 
                        <% if (locals.user) { %>
                            <form action="/comments/create" method="POST">
                                <input type="text" name = 'content' placeholder="Comment" required>
                                <input type="hidden" name="post" value="<%= post._id %>">
                                <input type="submit" value="Comment">
                            </form>
                        
                            <div class="post-comments-list">
                                <ul id="post-comment<%= post._id %>">
                                    <%= post.comments %> 
                                    <% for(comment of post.comment) { %>
                                        <li>
                                            <%= comment.content %>
                                            <br>
                                            <small>
                                            <%= comment.user.name %>
                                            </small>
                                            <% if (locals.user && locals.user.id == comment.user.id) { %>
                                                <small>
                                                    <a href="/comments/destroy/<%= comment.id %>">cd</a>
                                                </small>
                                            <% } %>
                                            
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        <% } %>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</section>  

